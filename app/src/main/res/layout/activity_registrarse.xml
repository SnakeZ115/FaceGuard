<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="#000C1D">


    <TextView
            android:text="Registro"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            android:fontFamily="@font/metropolisbold"
            android:textSize="50dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_width="289dp"
            android:layout_height="63dp"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo"
            android:contentDescription="FaceGuard"
            app:layout_constraintHorizontal_bias="0.497" tools:layout_editor_absoluteY="31dp"/>

    <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:hint="Nombre"
            android:fontFamily="@font/metropolisblack"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FFFFFF" android:layout_marginTop="36dp"/>

    <EditText
            android:id="@+id/editTextApellidos"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:hint="Apellidos"
            android:fontFamily="@font/metropolisblack"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/editTextNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FFFFFF" android:layout_marginTop="36dp"/>

    <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:hint="Telefono"
            android:fontFamily="@font/metropolisblack"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextApellidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FFFFFF" android:layout_marginTop="36dp"/>

    <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:hint="Correo electrÃ³nico"
            android:fontFamily="@font/metropolisblack"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextTelefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FFFFFF" android:layout_marginTop="36dp"/>

    <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:text="Registrarse"
            android:fontFamily="@font/metropolisbold"
            android:textColor="#030E18"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="#F3F5F0" app:layout_constraintHorizontal_bias="0.496"/>

    <Button
            android:id="@+id/buttonSalir"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:text="Salir"
            android:fontFamily="@font/metropolisbold"
            android:textColor="#030E18"
            app:layout_constraintTop_toBottomOf="@id/buttonRegistrarse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F3F5F0" app:layout_constraintHorizontal_bias="0.496"/>

</androidx.constraintlayout.widget.ConstraintLayout>