<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="16dp" android:background="#000C1D"
                                                   android:backgroundTint="#000C1D">


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo"
            android:contentDescription="FaceGuard" android:layout_marginTop="120dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="336dp"
            android:layout_height="46dp"
            android:hint="Correo electrónico"
            android:fontFamily="@font/metropolisblack"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FFFFFF" android:layout_marginTop="36dp"/>
    <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="336dp"
            android:layout_height="51dp"
            android:fontFamily="@font/metropolisblack"
            android:hint="Contraseña"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" android:backgroundTint="#FFFFFF"/>

    <Button
            android:id="@+id/buttonLogin"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:text="Iniciar sesión"
            android:fontFamily="@font/metropolisbold"
            android:textColor="#030E18"
            app:layout_constraintTop_toBottomOf="@id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            android:backgroundTint="#F3F5F0" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:text="Registrarse"
            android:fontFamily="@font/metropolisbold"
            android:textColor="#030E18"
            app:layout_constraintTop_toBottomOf="@id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="128dp"
            android:backgroundTint="#F3F5F0" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="FaceGuard"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            android:fontFamily="@font/metropolisbold"
            android:layout_width="278dp"
            android:layout_height="54dp" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="36dp" app:layout_constraintHorizontal_bias="0.496"/>


</androidx.constraintlayout.widget.ConstraintLayout>